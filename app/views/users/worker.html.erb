<body class="signup-bg">
  <div class="container">
    <div class="container">
      <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Sign up for Cover <small>It's free!</small></h3>
            </div>
            <div class="panel-body">
                <%= form_for @user, url: users_path do |f| %>
                  <%= f.hidden_field :usertype_id, value: @usertype.id %>
              <div class="row">
                <% if @user.errors.any? %>
                <p><%= @user.errors.full_messages %></p>
                <% end %>
                <% flash.each do |key, value| %>
                  <div class="alert alert-<%= key %>"><%= value %></div>
                <% end %>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :first_name, class: "form-control input-sm", placeholder: "First Name"%>
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.text_field :last_name, class: "form-control input-sm", placeholder: "Last Name" %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <%= f.text_field :email, class: "form-control input-sm", placeholder: "Email" %>
              </div>
              <div class="form-group">
                <%= f.text_field :cell, class: "form-control input-sm", placeholder: "Cell Phone" %>
              </div>
              <div class="form-group">
                <%= f.text_field :postal_code, class: "form-control input-sm", placeholder: "Postal code" %>
              </div>
              <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control input-sm", placeholder: "Password" %>
                  </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6">
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, class: "form-control input-sm", placeholder: "Confirm Password" %>
                  </div>
                </div>
              </div>
              <%= f.submit "Submit", class: "btn btn-info btn-block" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>