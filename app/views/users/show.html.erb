              <div class="col-sm-7"><%= @user.city %><br>
              </div>
              <div class="clearfix">
              </div>
              <div class="col-sm-5 col-xs-5 title ">Street address:
              </div>
              <div class="col-sm-7"><%= @user.street_address %><br>
              </div>
              <div class="clearfix">
              </div>
              <div class="bot-border">
              </div>
              <div class="col-sm-5 col-xs-5 title ">Province:
              </div>
              <div class="col-sm-7"><%= @user.province %><br>
              </div>
              <div class="clearfix">
              </div>
              <div class="bot-border">
              </div>
              <div class="col-sm-5 col-xs-5 title ">Postal code:
              </div>
              <% end %>
              <div class="col-sm-7"><%= @user.postal_code %><br>
              </div>
              <div class="clearfix">
              </div>
              <div class="bot-border">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(function () {
    $('#profile-image1').on('click', function () {
      $('#profile-image-upload').click();
    });
  });
