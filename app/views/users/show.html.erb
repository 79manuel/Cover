<% @user.experiences.each do |e| %>
  <div class="container">
    <div class="row">
      <div class="col-md-7 ">
        <div class="panel panel-default">
          <div class="panel-heading">
            <div>
              <h5>
              <%= e.jobtype.name.capitalize %>
              </h5>
            </div>
          </div>
          <div class="panel-body">
            <div class="box box-info">
              <div class="box-body">
                <div class="col-sm-14">
                  <div align="center">
                    <div class="col-sm-5 col-xs-6 title ">Employer:
                    </div>
                    <div class="col-xs-5 col-sm-7"><%= e.employer_name %>
                    </div>
                    <div class="clearfix">
                    </div>
                    <div class="bot-border">
                    </div>
                    <div class="col-sm-5 col-xs-6 title ">Month(s):
                    </div>
                    <div class="col-sm-7"><%= e.months %>
                    </div>
                    <div class="clearfix">
                    </div>
                    <div class="bot-border">
                    </div>
                    <div class="col-sm-5 col-xs-6 title ">Description:
                    </div>
                    <div class="col-sm-7"><%= e.description %>
                    </div>
                    <div class="clearfix">
                    </div>
                    <div class="bot-border">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>


