<div class="container">
  <div class="row">
    <div class="col-md-7 ">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 >Profile</h4>
        </div>
        <div class="panel-body">
          <div class="box box-info">
            <div class="box-body">

              <div class="col-sm-6">
                <div  align="center"> <img alt="User Pic" src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" id="profile-image1" class="img-circle img-responsive">
                </div>
                <br>
              </div>


              <div>
                <h4 class="col-sm-6" style="color:#00b1b1;"><%= @user.first_name %> <%= @user.last_name %></h4>
              </div>

              <div class="clearfix"></div>
              <hr style="margin:5px 0 5px 0;">
              <div class="col-sm-5 col-xs-6 tital" >Restaurant:
              </div>
              <div class="col-sm-7 "><%= @user.restaurant_name %>
              </div>

              <div class="col-sm-5 col-xs-6 tital" >First Name:
              </div>
              <div class="col-sm-7"><%= @user.first_name %>
              </div>

              <div class="col-sm-5 col-xs-6 tital " >Last Name:
              </div>
              <div class="col-sm-7"><%= @user.last_name %>
              </div>

              <div class="col-sm-5 col-xs-6 tital " >Cell Phone:
              </div>
              <div class="col-sm-7"><%= @user.cell %><br>
              </div>

              <div class="col-sm-5 col-xs-6 tital " >Email:
              </div>
              <div class="col-sm-7"><%= @user.email %><br>
              </div>

              <div class="col-sm-5 col-xs-6 tital " >City:
              </div>
              <div class="col-sm-7"><%= @user.city %><br>
              </div>

              <div class="col-sm-5 col-xs-6 tital " >Street address:
              </div>
              <div class="col-sm-7"><%= @user.street_address %><br>
              </div>

              <div class="col-sm-5 col-xs-6 tital " >Province:
              </div>
              <div class="col-sm-7"><%= @user.province %><br>
              </div>

              <div class="col-sm-5 col-xs-6 tital " >Postal code:
              </div>
              <div class="col-sm-7"><%= @user.postal_code %><br><br>
              </div>
            </div>
          </div>

        <% if current_user %>
          <%= form_for [@user, @review] do |f| %>
            <% if f.object.errors.any? %>
              <div class="alert alert-danger">
                <strong>The following errors prevented saving:</strong>
                <ul>
                  <% f.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="field">
              <div> Please add a comment and rate this product </div>
              <%= f.text_area :comment %>
              <%= f.select :rating, 1..5 %>
            </div>
            <div class="actions">
              <%= f.submit %>
            </div>
          <% end %>
        <% end %>

        <br>

        <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        See review
        </button>
        <div class="collapse" id="collapseExample">
          <div class="well">
            <table class="table">
              <caption><h4>Reviews</h4></caption>
              <thead>
                <th>Rating</th>
                <th>Content</th>
                <th>User</th>
              </thead>
              <tbody>
                <% @user.reviews_by.reverse_each do |item| %>
                  <tr>
                    <td><%= item.rating %></td>
                    <td><%= item.comment %></td>
                    <td><%= item.user.first_name %> <%= item.user.last_name %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




