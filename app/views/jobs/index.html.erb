<!-- View for a user, restaurant -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4">
      <% if current_user.usertype_id == 1 %>
          <section>
            <h3>Here are your current jobs, <%= current_user.restaurant_name %>.</h3>
            <div class="jobs">
              <% if @userjobs == nil %>
                  <h4>You have no jobs!</h4>
                    <%= link_to '+ New Job', [:new, :job], class: 'btn btn-primary btn-xs' %>
              <% else %>
                  <%= render @userjobs %>

                  <%= link_to '+ New Job', [:new, :job], class: 'btn btn-primary btn-xs' %>

              <% end %>
            </div>

          </section>
      <% else %>
          <!-- View for a user, worker -->
          
          <section>
            <div class="jobs">
              <%= render @jobs %>
            </div>
          </section>
      <% end %>
    </div>
  </div>
</div>
